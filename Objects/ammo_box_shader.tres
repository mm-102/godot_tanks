[gd_resource type="Shader" format=2]

[resource]
code = "shader_type canvas_item;

uniform float border_size = 0.05;

float rect(vec2 pos){
	float h = step(border_size, pos.x) - step(1.0 - border_size, pos.x);
	float v = step(border_size, pos.y) - step(1.0 - border_size, pos.y);
	return h * v;
}

vec3 hsv2rgb(vec3 c){
    vec4 K = vec4(1.0, 2.0 / 3.0, 1.0 / 3.0, 3.0);
    vec3 p = abs(fract(c.xxx + K.xyz) * 6.0 - K.www);
    return c.z * mix(K.xxx, clamp(p - K.xxx, 0.0, 1.0), c.y);
}

void fragment(){
	vec3 c = hsv2rgb(vec3(- TIME / 5.0 + UV.x + UV.y, 1.0, 1.0));
	vec4 border_color = vec4(c, 1.0);
	vec4 col = texture(TEXTURE, UV);
	COLOR = mix(border_color, col, rect(UV));
}"
